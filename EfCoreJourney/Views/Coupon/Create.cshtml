@model EntityLayer.Concrete.Coupon
@{
    ViewData["Title"] = "Yeni Kupon Ekle";
}

<h2>@ViewData["Title"]</h2>


<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Kod</label>
        <input asp-for="Code" class="form-control" placeholder="Kupon kodu girin" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>İndirim Oranı (%)</label>
        <input asp-for="DiscountRate" type="number" class="form-control" placeholder="İndirim oranı" />
        <span asp-validation-for="DiscountRate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Geçerli Tarih (Başlangıç)</label>
        <input asp-for="ValidFrom" type="date" class="form-control" />
        <span asp-validation-for="ValidFrom" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Geçerli Tarih (Bitiş)</label>
        <input asp-for="ValidUntil" type="date" class="form-control" />
        <span asp-validation-for="ValidUntil" class="text-danger"></span>
    </div>
    <div class="form-check">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label">Aktif mi?</label>
    </div>
    <br />
    <div class="mb-3">
        <button type="submit" class="btn btn-success">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </div>
 
</form>

