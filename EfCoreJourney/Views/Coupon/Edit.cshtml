@model EntityLayer.Concrete.Coupon
@{
    ViewData["Title"] = "Kupon Güncelle";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CouponID" />

    <div class="form-group">
        <label>Kod</label>
        <input asp-for="Code" class="form-control" placeholder="Kupon kodu" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>İndirim Oranı (%)</label>
        <input asp-for="DiscountRate" type="number" class="form-control" placeholder="İndirim oranı" />
        <span asp-validation-for="DiscountRate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Geçerlilik Başlangıç</label>
        <input asp-for="ValidFrom" type="date" class="form-control" />
        <span asp-validation-for="ValidFrom" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Geçerlilik Bitiş</label>
        <input asp-for="ValidUntil" type="date" class="form-control" />
        <span asp-validation-for="ValidUntil" class="text-danger"></span>
    </div>
    <div class="form-check">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label">Aktif mi?</label>
    </div>
    <br />
    <button type="submit" class="btn btn-success">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</form>
