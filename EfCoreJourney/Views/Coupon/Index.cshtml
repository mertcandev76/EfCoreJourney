@model List<EntityLayer.Concrete.Coupon>
@{
    ViewData["Title"] = "Kupon Listesi";
}
<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-primary mb-2">Yeni Kupon Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Kod</th>
            <th>İndirim Oranı (%)</th>
            <th>Başlangıç Tarihi</th>
            <th>Bitiş Tarihi</th>
            <th>Aktif mi?</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Code</td>
                <td>@item.DiscountRate</td>
                <td>@item.ValidFrom.ToShortDateString()</td>
                <td>@item.ValidUntil.ToShortDateString()</td>
                <td>@(item.IsActive ? "Evet" : "Hayır")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CouponID" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.CouponID" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Delete" asp-route-id="@item.CouponID" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

