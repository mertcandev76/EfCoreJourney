@model EntityLayer.Concrete.Customer
@{
    ViewData["Title"] = "Yeni Müşteri Ekle";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="FullName">Ad Soyad</label>
        <input asp-for="FullName" class="form-control" placeholder="Adınızı ve soyadınızı giriniz" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Age">Yaş</label>
        <input asp-for="Age" type="number" class="form-control" placeholder="Yaşınızı giriniz" min="0" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Email">E-posta</label>
        <input asp-for="Email" type="email" class="form-control" placeholder="örnek@ornek.com" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Phone">Telefon</label>
        <input asp-for="Phone" type="tel" class="form-control" placeholder="+90 5xx xxx xx xx" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Address">Adres</label>
        <input asp-for="Address" class="form-control" placeholder="Adresinizi giriniz" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label">Aktif mi?</label>
    </div>


    <div class="form-group mb-3">
        <label asp-for="BirthDate">Doğum Tarihi</label>
        <input asp-for="BirthDate" type="date" class="form-control" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}