@model EntityLayer.Concrete.Customer
@{
    ViewData["Title"] = "Müşteri Detayları";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<table class="table table-bordered">
    <tr>
        <th>Ad Soyad</th>
        <td>@Model.FullName</td>
    </tr>
    <tr>
        <th>Yaş</th>
        <td>@Model.Age</td>
    </tr>
    <tr>
        <th>E-Mail</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Telefon</th>
        <td>@Model.Phone</td>
    </tr>
    <tr>
        <th>Adres</th>
        <td>@Model.Address</td>
    </tr>
    <tr>
        <th>Aktif mi?</th>
        <td>@((Model.IsActive == true) ? "Evet" : "Hayır")</td>
    </tr>
    <tr>
        <th>Doğum Tarihi</th>
        <td>@Model.BirthDate?.ToString("dd.MM.yyyy")</td>
    </tr>
</table>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</div>




