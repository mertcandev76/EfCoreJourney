@model EntityLayer.Concrete.CustomerCoupon
@{
    ViewData["Title"] = "Müşteri Kuponu Detay";
}

<h2>@ViewData["Title"]</h2>

<dl class="row">
    <!-- Ana ID -->
    <dt class="col-sm-3">Kayıt No</dt>
    <dd class="col-sm-9">@Model.CustomerCouponID</dd>

    <!-- Müşteri Bilgileri -->
    <dt class="col-sm-3">Müşteri Adı</dt>
    <dd class="col-sm-9">@Model.Customer?.FullName</dd>

    <dt class="col-sm-3">Müşteri Yaş</dt>
    <dd class="col-sm-9">@Model.Customer?.Age</dd>

    <dt class="col-sm-3">Müşteri E-Posta</dt>
    <dd class="col-sm-9">@Model.Customer?.Email</dd>

    <dt class="col-sm-3">Müşteri Telefon</dt>
    <dd class="col-sm-9">@Model.Customer?.Phone</dd>

    <dt class="col-sm-3">Adres</dt>
    <dd class="col-sm-9">@Model.Customer?.Address</dd>

    <dt class="col-sm-3">Aktiflik Durumu</dt>
    <dd class="col-sm-9">@((Model.Customer?.IsActive == true) ? "Evet" : "Hayır")</dd>

    <dt class="col-sm-3">Doğum Tarihi</dt>
    <dd class="col-sm-9">@Model.Customer?.BirthDate?.ToString("dd.MM.yyyy")</dd>

    <!-- Kupon Bilgileri -->
    <dt class="col-sm-3">Kupon Kodu</dt>
    <dd class="col-sm-9">@Model.Coupon?.Code</dd>

    <dt class="col-sm-3">İndirim Oranı</dt>
    <dd class="col-sm-9">@Model.Coupon?.DiscountRate %</dd>

    <dt class="col-sm-3">Geçerlilik Başlangıç</dt>
    <dd class="col-sm-9">@Model.Coupon?.ValidFrom.ToString("dd.MM.yyyy")</dd>

    <dt class="col-sm-3">Geçerlilik Bitiş</dt>
    <dd class="col-sm-9">@Model.Coupon?.ValidUntil.ToString("dd.MM.yyyy")</dd>

    <dt class="col-sm-3">Kupon Aktif mi?</dt>
    <dd class="col-sm-9">@((Model.Coupon?.IsActive == true) ? "Evet" : "Hayır")</dd>

    <!-- Kullanım Bilgisi -->
    <dt class="col-sm-3">Kupon Kullanım Tarihi</dt>
    <dd class="col-sm-9">@Model.RedeemedAt?.ToString("dd.MM.yyyy")</dd>
</dl>
<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</div>



