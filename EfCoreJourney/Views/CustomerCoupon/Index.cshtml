@model List<EntityLayer.Concrete.CustomerCoupon>
@{
    ViewData["Title"] = "Müşteri Kuponları";
}

<h2>@ViewData["Title"]</h2>
<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary mb-3">Yeni Ekle</a>
</div>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Müşteri</th>
            <th>Kupon Kodu</th>
            <th>İndirim</th>
            <th>Kullanım Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Customer?.FullName</td>
                <td>@item.Coupon?.Code</td>
                <td>@item.Coupon?.DiscountRate %</td>
                <td>@(item.RedeemedAt?.ToString("dd.MM.yyyy") ?? "-")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CustomerCouponID" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.CustomerCouponID" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Delete" asp-route-id="@item.CustomerCouponID" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

