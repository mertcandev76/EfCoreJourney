@model EntityLayer.Concrete.Log
@{
    ViewData["Title"] = "Yeni Kayıt Ekle";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Tarih</label>
        <input asp-for="LogDate" class="form-control" type="datetime-local" />
    </div>
    <div class="form-group">
        <label>Seviye</label>
        <input asp-for="LogLevel" class="form-control" />
    </div>
    <div class="form-group">
        <label>Mesaj</label>
        <input asp-for="Message" class="form-control" />
    </div>
    <div class="form-group">
        <label>Detaylar</label>
        <textarea asp-for="Details" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Kaynak</label>
        <input asp-for="Source" class="form-control" />
    </div>
    <div class="form-group">
        <label>Kullanıcı</label>
        <input asp-for="User" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

