@model EntityLayer.Concrete.Log
@{
    ViewData["Title"] = "Kayıt Sil";
}
<h2 class="mb-4">
    <strong>Silmek istediğinize emin misiniz?</strong>
</h2>


<div>
    <dl class="row">
        <dt class="col-sm-2">Mesaj</dt>
        <dd class="col-sm-10">@Model.Message</dd>
        <dt class="col-sm-2">Kullanıcı</dt>
        <dd class="col-sm-10">@Model.User</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="LogID" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
</form>

