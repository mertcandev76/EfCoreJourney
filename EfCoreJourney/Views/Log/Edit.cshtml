@model EntityLayer.Concrete.Log
@{
    ViewData["Title"] = "Kayıt Güncelle";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="LogID" />

    <div class="form-group">
        <label asp-for="LogDate" class="control-label">Tarih</label>
        <input asp-for="LogDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="LogDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LogLevel" class="control-label">Seviye</label>
        <input asp-for="LogLevel" class="form-control" />
        <span asp-validation-for="LogLevel" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Message" class="control-label">Mesaj</label>
        <input asp-for="Message" class="form-control" />
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Details" class="control-label">Detay</label>
        <textarea asp-for="Details" class="form-control"></textarea>
        <span asp-validation-for="Details" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Source" class="control-label">Kaynak</label>
        <input asp-for="Source" class="form-control" />
        <span asp-validation-for="Source" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="User" class="control-label">Kullanıcı</label>
        <input asp-for="User" class="form-control" />
        <span asp-validation-for="User" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Güncelle</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

