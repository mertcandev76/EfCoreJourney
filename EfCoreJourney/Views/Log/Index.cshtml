@model List<EntityLayer.Concrete.Log>
@{
    ViewData["Title"] = "Kayıt Listeleme Sayfası";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-success mb-2">Yeni Log Ekle</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tarih</th>
            <th>Seviye</th>
            <th>Detay</th>
            <th>Kaynak</th>
            <th>Mesaj</th>
            <th>Kullanıcı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.LogID</td>
                <td>@log.LogDate?.ToShortDateString()</td>
                <td>@log.LogLevel</td>
                <td>@log.Details</td>
                <td>@log.Source</td>
                <td>@log.Message</td>
                <td>@log.User</td>
                <td>
                    <a asp-action="Details" asp-route-id="@log.LogID" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@log.LogID" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@log.LogID" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

