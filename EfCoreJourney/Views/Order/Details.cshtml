@model EntityLayer.Concrete.Order
@{
    ViewData["Title"] = "Sipariş Detayları";
}

<h2>@ViewData["Title"]</h2>
<!-- Sipariş Genel Bilgileri -->
<h4 class="mt-3">Genel Bilgiler</h4>
<dl class="row">
    <dt class="col-sm-3">Sipariş Numarası</dt>
    <dd class="col-sm-9">@Model.OrderID</dd>

    <dt class="col-sm-3">Tarih</dt>
    <dd class="col-sm-9">@Model.OrderDate.ToString("dd.MM.yyyy")</dd>

    <dt class="col-sm-3">Toplam Tutar</dt>
    <dd class="col-sm-9">@Model.TotalAmount ₺</dd>

    <dt class="col-sm-3">Durum</dt>
    <dd class="col-sm-9">@Model.Status</dd>

    <dt class="col-sm-3">Not</dt>
    <dd class="col-sm-9">@Model.Notes</dd>
</dl>

<!-- Müşteri Bilgileri -->
<h4 class="mt-4">Müşteri Bilgileri</h4>
<dl class="row">
    <dt class="col-sm-3">Ad Soyad</dt>
    <dd class="col-sm-9">@Model.Customer?.FullName</dd>

    <dt class="col-sm-3">E-Posta</dt>
    <dd class="col-sm-9">@Model.Customer?.Email</dd>

    <dt class="col-sm-3">Telefon</dt>
    <dd class="col-sm-9">@Model.Customer?.Phone</dd>

    <dt class="col-sm-3">Adres</dt>
    <dd class="col-sm-9">@Model.Customer?.Address</dd>

    <dt class="col-sm-3">Doğum Tarihi</dt>
    <dd class="col-sm-9">@Model.Customer?.BirthDate?.ToString("dd.MM.yyyy")</dd>
</dl>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</div>

