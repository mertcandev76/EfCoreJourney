@model EntityLayer.Concrete.OrderDetail
@{
    ViewData["Title"] = "Sipariş Detayı";
}

<h2>@ViewData["Title"]</h2>

<div class="card p-4 mb-3">
    <dl class="row">


        <dt class="col-sm-3">Miktar</dt>
        <dd class="col-sm-9">@Model.Quantity</dd>

        <dt class="col-sm-3">Birim Fiyat</dt>
        <dd class="col-sm-9">@Model.UnitPrice.ToString("C")</dd>

        <dt class="col-sm-3">İndirim</dt>
        <dd class="col-sm-9">@((Model.Discount.HasValue) ? Model.Discount.Value.ToString("P") : "-")</dd>

        <dt class="col-sm-3">Notlar</dt>
        <dd class="col-sm-9">@Model.Notes ?? "-"</dd>


        @* Order ilişkili kolonlar *@
        <dt class="col-sm-3">Order Tarihi</dt>
        <dd class="col-sm-9">@Model.Order?.OrderDate.ToString("dd.MM.yyyy")</dd>

        <dt class="col-sm-3">Order Toplam Tutarı</dt>
        <dd class="col-sm-9">@Model.Order?.TotalAmount?.ToString("C") ?? "-"</dd>

        <dt class="col-sm-3">Order Durumu</dt>
        <dd class="col-sm-9">@Model.Order?.Status ?? "-"</dd>

        <dt class="col-sm-3">Order Notları</dt>
        <dd class="col-sm-9">@Model.Order?.Notes ?? "-"</dd>


        @* Product ilişkili kolonlar *@
        <dt class="col-sm-3">Ürün Adı</dt>
        <dd class="col-sm-9">@Model.Product?.Name</dd>

        <dt class="col-sm-3">Ürün Açıklaması</dt>
        <dd class="col-sm-9">@Model.Product?.Description ?? "-"</dd>

        <dt class="col-sm-3">Fiyat</dt>
        <dd class="col-sm-9">@Model.Product?.Price.ToString("C")</dd>

        <dt class="col-sm-3">Stok</dt>
        <dd class="col-sm-9">@Model.Product?.Stock</dd>

        <dt class="col-sm-3">Aktif Mi?</dt>
        <dd class="col-sm-9">@((Model.Product != null && Model.Product.IsActive) ? "Evet" : "Hayır")</dd>
    </dl>
</div>
<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-primary">Geri Dön</a>
</div>


