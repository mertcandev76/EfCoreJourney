@model EntityLayer.Concrete.OrderDetail
@{
    ViewData["Title"] = "Sipariş Detayı Güncelle";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="OrderDetailID" />

    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" type="number" min="1" placeholder="Miktar giriniz" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UnitPrice"></label>
        <input asp-for="UnitPrice" class="form-control" type="number" step="0.01" min="0" placeholder="Birim fiyat giriniz" />
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Discount"></label>
        <input asp-for="Discount" class="form-control" type="number" step="0.01" min="0" max="1" placeholder="İndirim oranı giriniz (örn: 0.1 = %10)" />
        <span asp-validation-for="Discount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes"></label>
        <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Sipariş notları yazınız..."></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Sipariş Tarihi</label>
        <select asp-for="OrderId" class="form-control" asp-items="ViewBag.Orders">
            <option value="">-- Sipariş seçin --</option>
        </select>
        <span asp-validation-for="OrderId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Ürün Açıklaması</label>
        <select asp-for="ProductID" class="form-control" asp-items="ViewBag.Products">
            <option value="">-- Ürün seçin --</option>
        </select>
        <span asp-validation-for="ProductID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

