@model IEnumerable<EntityLayer.Concrete.OrderPayment>
@{
    ViewData["Title"] = "Ödeme Listesi";
}

<h2>@ViewData["Title"]</h2>

<div class="mb-3">
    <a class="btn btn-primary" asp-action="Create">Yeni Ödeme Ekle</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tutar</th>
            <th>Yöntem</th>
            <th>Tarih</th>
            <th>Order Notu</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrderPaymentID</td>
                <td>@item.Amount.ToString("C")</td>
                <td>@item.PaymentMethod</td>
                <td>@item.PaymentDate?.ToShortDateString()</td>
                <td>@item.Order?.Notes</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.OrderPaymentID">Düzenle</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.OrderPaymentID">Sil</a>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.OrderPaymentID">Detay</a>
                </td>
            </tr>
        }
    </tbody>
</table>





