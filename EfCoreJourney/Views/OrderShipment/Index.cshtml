@model List<EntityLayer.Concrete.OrderShipment>
@{
    ViewData["Title"] = "Kargo Listesi";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Yeni Kargo Bilgisi Ekle</a>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Kargo Firması</th>
            <th>Takip No</th>
            <th>Kargolandı</th>
            <th>Teslim Edildi</th>
            <th>Sipariş Notu</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Carrier</td>
                <td>@item.TrackingNumber</td>
                <td>@item.ShippedDate?.ToString("dd.MM.yyyy")</td>
                <td>@item.DeliveredDate?.ToString("dd.MM.yyyy")</td>
                <td>@item.Order?.Notes</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OrderShipmentID" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.OrderShipmentID" class="btn btn-sm btn-info">Detay</a>
                    <a asp-action="Delete" asp-route-id="@item.OrderShipmentID" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

