@model EntityLayer.Concrete.Product
@{
    ViewData["Title"] = "Ürünü Güncelle";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProductID" />
    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">Ürün İsmi</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label">Açıklama</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Price" class="form-label">Fiyat</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Stock" class="form-label">Stok</label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label">Bildirimleri Aktif Et</label>
    </div>

    <div class="form-group mb-3">
        <label for="ProductBrandID" class="form-label">Marka Seçimi</label>
        <select asp-for="ProductBrandID" class="form-select" asp-items="ViewBag.Brands">
            <option value="">-- Marka Seçiniz --</option>
        </select>
        <span asp-validation-for="ProductBrandID" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label for="CategoryID" class="form-label">Kategori Seçimi</label>
        <select asp-for="ProductCategoryID" class="form-select" asp-items="ViewBag.Categories">
            <option value="">-- Kategori Seçiniz --</option>
        </select>
        <span asp-validation-for="ProductCategoryID" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-success">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

