@model List<EntityLayer.Concrete.Product>
@{
    ViewData["Title"] = "Index";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Ekle</a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Ürün İsmi</th>
            <th>Açıklama</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Aktif mi?</th>
            <th>Bağlı Marka</th>
            <th>Bağlı Kategori</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductID</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>@item.Stock</td>
                    <td>
                        @(item.IsActive ? "Evet" : "Hayır")
                    </td>
                    <td>
                        @(item.ProductBrand != null ? item.ProductBrand.Name : Html.Raw("<em>Marka bulunamadı</em>"))
                    </td>
                    <td>
                        @(item.Category != null ? item.Category.Name : Html.Raw("<em>Kategori bulunamadı</em>"))
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.ProductID" class="btn btn-info btn-sm">Detay</a>
                        <a asp-action="Edit" asp-route-id="@item.ProductID" class="btn btn-warning btn-sm">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.ProductID" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-danger">Kayıt bulunamadı.</td>
            </tr>
        }
    </tbody>
</table>

