@model EntityLayer.Concrete.ProductBrand
@{
    ViewData["Title"] = "Yeni Ürün Markası Ekle";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">Marka Adı</label>
        <input asp-for="Name" class="form-control" placeholder="Örn: Samsung" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label">Açıklama</label>
        <input asp-for="Description" class="form-control" placeholder="Örn: Akıllı telefonlar, televizyonlar vb." />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Country" class="form-label">Ülke</label>
        <input asp-for="Country" class="form-control" placeholder="Örn: Güney Kore" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-success">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </div>

</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
