@model EntityLayer.Concrete.ProductBrand
@{
    ViewData["Title"] = "Ürün Markasını Düzenle";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProductBrandID" />

    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">Marka Adı</label>
        <input asp-for="Name" class="form-control" placeholder="Örn: Samsung" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label">Açıklama</label>
        <input asp-for="Description" class="form-control" placeholder="Örn: Akıllı telefonlar, televizyonlar vb.  />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Country" class="form-label">Ülke</label>
        <input asp-for="Country" class="form-control" placeholder="Örn: Güney Kore" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-warning">Düzenle</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
    </div>

</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

