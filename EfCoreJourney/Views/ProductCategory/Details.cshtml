@model EntityLayer.Concrete.ProductCategory
@{
    ViewData["Title"] = "Kategori Detayı";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<table class="table table-bordered">
    <tr>
        <th>Ürün Marka Adı</th>
        <td>@Model.Name</td>
    </tr>
