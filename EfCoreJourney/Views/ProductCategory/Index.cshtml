@model List<EntityLayer.Concrete.ProductCategory>
@{
    ViewData["Title"] = "Kategori Listeleme Sayfası";
}

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Ekle</a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kategori Adı</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var productCategory in Model)
        {
            <tr>
                <td>@productCategory.ProductCategoryID</td>
                <td>@productCategory.Name</td>
                <td>@productCategory.Description</td>
                <td>
                    <a asp-action="Details" asp-route-id="@productCategory.ProductCategoryID" class="btn btn-info btn btn-sm">Detaylar</a>
                    <a asp-action="Edit" asp-route-id="@productCategory.ProductCategoryID" class="btn btn-warning btn btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@productCategory.ProductCategoryID" class="btn btn-danger btn btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>




