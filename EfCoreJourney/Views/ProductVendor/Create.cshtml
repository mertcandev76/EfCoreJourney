@model EntityLayer.Concrete.ProductVendor
@{
    ViewData["Title"] = "Yeni Ürün Tedarikçisi Ekle";
}

<h2 class="mb-4 text-success fw-bold">@ViewData["Title"]</h2>

<form asp-action="Create" method="post" novalidate>
    <div class="mb-3">
        <label asp-for="CompanyName" class="form-label fw-semibold">Firma Adı</label>
        <input asp-for="CompanyName" class="form-control" placeholder="Örn: ABC Teknoloji" type="text" />
        <span asp-validation-for="CompanyName" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ContactPerson" class="form-label fw-semibold">İlgili Kişi</label>
        <input asp-for="ContactPerson" class="form-control" placeholder="Örn: Ahmet Yılmaz" type="text" />
        <span asp-validation-for="ContactPerson" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label fw-semibold">E-Posta</label>
        <input asp-for="Email" class="form-control" placeholder="Örn: ahmet@example.com" type="email" />
        <span asp-validation-for="Email" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label fw-semibold">Telefon</label>
        <input asp-for="Phone" class="form-control" placeholder="Örn: +90 555 123 4567" type="tel" />
        <span asp-validation-for="Phone" class="text-danger small"></span>
    </div>

    <div class="mt-4 d-flex gap-2">
        <button type="submit" class="btn btn-success px-4">Kaydet</button>
        <a asp-action="Index" class="btn btn-outline-secondary px-4">İptal</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}




