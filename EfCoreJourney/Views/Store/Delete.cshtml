@model EntityLayer.Concrete.Store
@{
    ViewData["Title"] = "Silmek İstediğine Emin misin?";
}


<h2 class="mb-4">
    <strong>
        @ViewData["Title"]
    </strong>
</h2>



<div>
    <dl class="row">
        <dt class="col-sm-2">Mağaza Adı</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Mağaza Sahibinin Adı</dt>
        <dd class="col-sm-10">@Model.OwnerName</dd>
        <dt class="col-sm-2">E-Mail</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>
</div>


<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="StoreID"/>
    <div class="form-group">
        <button class="btn btn-danger" type="submit">Sil</button>
        <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
    </div>
</form>

