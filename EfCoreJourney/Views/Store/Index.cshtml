@model List<EntityLayer.Concrete.Store>
@{
    ViewData["Title"] = "Mağaza Listeleme Sayfası";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success mb-2">Yeni Mağaza Ekle</a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Mağaza Adı</th>
            <th>Mağaza Sahibinin Adı</th>
            <th>E-Mail</th>    
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var store in Model)
        {
            <tr>
                <td>@store.StoreID</td>
                <td>@store.Name</td>
                <td>@store.OwnerName</td>
                <td>@store.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@store.StoreID" class="btn btn-info btn btn-sm">Detaylar</a>
                    <a asp-action="Edit" asp-route-id="@store.StoreID" class="btn btn-warning btn btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@store.StoreID" class="btn btn-danger btn btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

