@model EntityLayer.Concrete.StoreSetting
@{
    ViewData["Title"] = "Yeni Mağaza Ayarı Ekle";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="Currency" class="form-label">Para Birimi</label>
        <input asp-for="Currency" class="form-control" placeholder="Örn: USD, EUR, TRY" />
        <span asp-validation-for="Currency" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Language" class="form-label">Dil</label>
        <input asp-for="Language" class="form-control" placeholder="Örn: Türkçe, English" />
        <span asp-validation-for="Language" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="EnableNotifications" class="form-check-input" />
        <label asp-for="EnableNotifications" class="form-check-label">Bildirimleri Aktif Et</label>
    </div>

    <div class="form-group mb-3">
        <label for="StoreId" class="form-label">Mağaza Seçimi</label>
        <select asp-for="StoreId" class="form-select" asp-items="ViewBag.Stores">
            <option value="">-- Mağaza Seçiniz --</option>
        </select>
        <span asp-validation-for="StoreId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-success">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

