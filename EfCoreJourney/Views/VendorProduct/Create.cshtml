@model EntityLayer.Concrete.VendorProduct
@{
    ViewData["Title"] = "Create";
}

<h2 class="mb-4">@ViewData["Title"]</h2>



<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="SupplyPrice" class="form-label">Tedarik Fiyatı</label>
        <input asp-for="SupplyPrice" class="form-control" />
        <span asp-validation-for="SupplyPrice" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="SuppliedDate" class="form-label">Tedarik Tarihi</label>
        <input asp-for="SuppliedDate" class="form-control" type="datetime-local"/>
        <span asp-validation-for="SuppliedDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="ProductID" class="form-label">Marka Seçimi</label>
        <select asp-for="ProductID" class="form-select" asp-items="ViewBag.Products">
            <option value="">-- Ürün Seçiniz --</option>
        </select>
        <span asp-validation-for="ProductID" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label for="ProductVendorID" class="form-label">Kategori Seçimi</label>
        <select asp-for="ProductVendorID" class="form-select" asp-items="ViewBag.ProductVendors">
            <option value="">-- Satıcı Seçiniz --</option>
        </select>
        <span asp-validation-for="ProductVendorID" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-success">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}