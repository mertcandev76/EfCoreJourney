@model EntityLayer.Concrete.VendorProduct
@{
    ViewData["Title"] = "Delete";
}
<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="alert alert-warning">
    <strong>Bu ürün satış ayarını silmek istediğinize emin misiniz?</strong>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-3">Ürün Adı</dt>
        <dd class="col-sm-9">@Model.Product?.Name</dd>

        <dt class="col-sm-3">
            Tedarik Fiyatı
        </dt>
        <dd class="col-sm-9">@Model.SupplyPrice</dd>

    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="VendorProductID" />
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-danger">Evet, Sil</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
    </div>
</form>

